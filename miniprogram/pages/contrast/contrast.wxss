/* miniprogram/pages/contrast/contrast.wxss */
.top{
  position: fixed;
  top: 0;
  height: 180rpx;
  width: 750rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #cfcfcf;
}
.con_icon{
  height: 100%;
  width: 50%;
  float: left;
  background-color: #d7f1bf;
}
.con_icon cover-image{
  margin-left: 120rpx;
  margin-top: 10rpx;
  height: 120rpx;
  width: 120rpx;
}
.con_name{
  position: relative;
  top: 6rpx;
  margin-left: 120rpx;
  font-size: 25rpx;
}
/* //对比信息处 */
.con_msg{
  margin-top: 180rpx;
  /* height: 2000rpx; */
  /* background-color: #ff7a7a */
}
.con_text{
  height: 160rpx;
  /* background-color: #f79d9d; */
}
.con_text_line{
  height: 80rpx;
  /* background-color: #c9f79d; */
}
.con_text_line_sub{
  float: left;
  width: 50%;
  height: 100%;
  /* background-color: #cfcfcf; */
  border-bottom: 1rpx solid #cfcfcf;
}
.con_text_line_sub text{
  font-size: 25rpx;
  position: relative;
  left: 120rpx;
}
/* 比较大小的图片 */
.con_canvas{
  width: 100%;
  height: 160rpx;
  /* background-color: #cfcfcf; */
}
.con_canvas_title{
  padding-left: 20rpx;
  height: 40rpx;
  font-size: 20rpx;
  background-color: #f5f5f5;
}
.con_canvas_sub{
  width: 750rpx;
  height: 60rpx;
  margin-left: 20rpx;
  font-size: 20rpx;
  /* background-color: #ff6a6a; */
}
.con_canvas_sub view{
  float: left;
}
.con_canvas_sub text{
  line-height: 60rpx;
}
.con_canvas_sub_canvas{
  position: relative;
  top: 10rpx;
  margin-left: 80rpx;
  height: 40rpx;
  background-color: #e4e4e4
}
.con_canvas_sub_text{
  margin-left: 10rpx;
}
.con_canvas_sub canvas{
  width: 480rpx;
  height: 40rpx;
}